<!-- MainWindow.xaml con estilo Telegram -->
<Window x:Class="InstantMessenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instant Messenger" Height="600" Width="900"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Background="#F5F5F5">

    <!-- Recursos de la ventana para definir estilos -->
    <Window.Resources>
        <!-- Colores principales estilo Telegram -->
        <SolidColorBrush x:Key="TelegramBlue" Color="#5682a3"/>
        <SolidColorBrush x:Key="TelegramLightBlue" Color="#7fa7c7"/>
        <SolidColorBrush x:Key="TelegramBackgroundGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="TelegramDarkText" Color="#333333"/>
        <SolidColorBrush x:Key="TelegramMessageBubble" Color="#effdde"/>
        <SolidColorBrush x:Key="TelegramBorderGray" Color="#E0E0E0"/>

        <!-- Estilo para botones -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource TelegramBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource TelegramLightBlue}"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TelegramDarkText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TelegramBorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ListBox -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource TelegramBorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer Padding="1" Focusable="False">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Border" 
                                            CornerRadius="4"
                                            Background="Transparent"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#e6f2fa"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#f2f2f2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TabControl -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Estilo para TabItem -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                BorderThickness="0,0,0,2" 
                                BorderBrush="Transparent"
                                Padding="12,5">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource TelegramBlue}"/>
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TelegramBlue}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#f2f2f2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Grid principal con dos columnas -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo (lista de usuarios) -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título con estilo Telegram -->
            <Border Grid.Row="0" 
                    Background="{StaticResource TelegramBlue}" 
                    CornerRadius="4" 
                    Padding="10,5">
                <TextBlock Text="Usuarios conectados" 
                           FontWeight="SemiBold" 
                           Margin="5" 
                           Foreground="White"/>
            </Border>

            <!-- ListBox de usuarios -->
            <ListBox x:Name="UsersListBox" 
                     Margin="0,10" 
                     SelectionChanged="UsersListBox_SelectionChanged" 
                     Grid.Row="1"/>

            <!-- Botón de búsqueda -->
            <Button Content="Buscar Usuarios" 
                    Click="SearchUsers_Click" 
                    Margin="0,5,0,0" 
                    Grid.Row="2"/>
        </Grid>

        <!-- Panel derecho (área de chat) -->
        <TabControl x:Name="ChatTabControl" Grid.Column="1" Margin="10">
            <TabItem Header="Chat">
                <!-- Grid interno para el área de chat -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ListBox para los mensajes de chat -->
                    <ListBox x:Name="ChatListBox" 
                             Margin="10" 
                             Grid.Row="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource TelegramMessageBubble}" 
                                        CornerRadius="8" 
                                        Padding="8,6">
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Panel de envío de mensajes -->
                    <Grid Grid.Row="1" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="MessageTextBox" 
                                 Grid.Column="0" 
                                 Height="36" 
                                 VerticalAlignment="Center" IsEnabled="False"/>

                        <Button Content="Enviar" 
                                Click="SendButton_Click"
                                Grid.Column="1"
                                Margin="10,0,0,0" 
                                Width="100" 
                                Height="36" IsEnabled="False"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>